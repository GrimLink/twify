{
  "env": {
    "node": true,
    "es2021": true
  },
  "overrides": [
    {
      "files": ["*.{js,cjs,mjs}"],
      "extends": ["eslint:recommended", "plugin:prettier/recommended"]
    },
    {
      "files": ["*.ts"],
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
      },
      "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:prettier/recommended"
      ]
    }
  ]
}
